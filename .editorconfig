# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Elixir/Phoenix
[*.{ex,exs}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript/JSON
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML
[*.{html,htm}]
indent_style = space
indent_size = 2

# Markdown (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Terraform
[*.tf]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

